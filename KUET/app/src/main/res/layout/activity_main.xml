<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8686b4"
    android:gravity="center"
    android:padding="20dp"
    android:weightSum="3"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_weight="1"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:src="@drawable/kuet" />

    <LinearLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:clickable="true"
            android:id="@+id/homeButtonId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home_button_text"
            android:textSize="20sp"
            android:background="#66669f"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>
        <Button
            android:id="@+id/studentCornerButtonId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/studentCorner_button_text"
            android:textSize="20sp"
            android:background="#66669f"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>
        <Button
            android:id="@+id/academicButtonId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/academic_button_text"
            android:textSize="20sp"
            android:background="#66669f"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>
        <Button
            android:id="@+id/libraryButtonId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/library_button_text"
            android:textSize="20sp"
            android:background="#66669f"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>
        <Button
            android:id="@+id/busScheduleButtonId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/busSchedule_button_text"
            android:textSize="20sp"
            android:background="#66669f"
            android:textAllCaps="false"
            android:textStyle="bold"/>


    </LinearLayout>


</LinearLayout>